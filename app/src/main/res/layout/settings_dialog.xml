<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:minWidth="300dp">

    <TextView
        android:id="@+id/fromLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From"
        android:layout_centerHorizontal="true"/>

    <Spinner
        android:id="@+id/boxFrom"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#5C413A"
        android:textColor="#FFFFFF"
        android:text="ENGLISH"
        android:layout_below="@+id/fromLabel"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/toLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/boxFrom"
        android:layout_marginTop="15dp"/>

    <Spinner
        android:id="@+id/boxTo"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#5C413A"
        android:textColor="#FFFFFF"
        android:text="ENGLISH"
        android:layout_below="@+id/toLabel"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/fontSizeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text Size Example"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/boxTo"
        android:layout_marginTop="35dp"
        android:textColor="#010101"
        android:textSize="20dp"/>

    <SeekBar
        android:id="@+id/fontSizeChanger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/fontSizeView"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <Button
        android:id="@+id/okButton"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/fontSizeChanger"
        android:background="#5C413A"
        android:textColor="#FFFFFF"
        android:text="OK"
        android:textSize="12sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

</RelativeLayout>